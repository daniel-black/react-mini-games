{
  "name": "react-mini-games",
  "version": "1.0.2",
  "description": "A collection of mini games built with React.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build"
  },
  "keywords": [
    "react",
    "mini-games",
    "games",
    "react-mini-games",
    "typescript",
    "canvas"
  ],
  "author": "Daniel Black",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daniel-black/react-mini-games.git"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
